    "@types/node": "^8.5.2",
    "@types/rimraf": "2.0.2",
    "bash-glob": "^2.0.0",
    "compute-stdev": "^1.0.0",
    "execa": "^0.8.0",
    "fast-glob": "^1.0.1",
    "fs-extra": "^5.0.0",
    "glob": "^7.1.2",
